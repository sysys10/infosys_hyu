{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "allowImportingTsExtensions": true,
  "resolveJsonModule": true,
  "moduleDetection": "force",
  "compilerOptions": {
    "isolatedModules": false,
    "plugins": [{ "name": "next" }],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "esModuleInterop": true,
    "removeComments": true,
    "declaration":true
  }
}
